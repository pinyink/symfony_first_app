{% extends 'base.html.twig' %}

{% block title %}
Pindipin
{% endblock %}

{% block meta %}
<meta name="description" content="{{ post.summary }}">
{% endblock %}

{% block stylesheets %}
    <style>
        .code-container { background-color: #eaeaea; padding: 20px; border-radius: 8px; margin: 10px 0; } .code-container pre { background-color: #333; color: #f4f4f9; padding: 15px; border-radius: 8px; overflow-x: auto; } .code-container pre code { font-family: Consolas, 'Courier New', monospace; }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
<section id="contents" class="gradient-bg">
    <div class="container">
        <div class="text-center mb-5 mt-5">
            <h1 class="display-4 fw-bold">Pindipin Blog</h1>
            <p class="lead text-muted">Sharing apa aja</p>
        </div>

        <div class="row g-4">
            <!-- Main Content Area -->
            <div class="col-lg-8">
                <!-- Featured Post -->
                <div class="card post-card mb-4 overflow-hidden">
                    {% if (post.sampul != null) %}
                        <img src="{{ asset(image_directory ~ 'file/' ~ post.sampul.path ) }}" class="card-img-top" alt="Featured Post" style="height: 350px; object-fit: cover;" alt="{{ post.sampul.name }}">
                    {% endif %}
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span><i class="fa fa-user-alt"></i> {{ post.user.fullname }}</span>
                            <small class="text-muted"><i class="fa fa-clock"></i> {{ post.date|date('d F Y') }}</small>
                        </div>
                        <h2 class="card-title">{{ post.title }}</h2>
                        {{ post.content|raw }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Search Widget -->
                <div class="card search-box mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Search</h5>
                            <form action="{{ path('article') }}" class="search">
                        <div class="input-group mb-3">
                            <input type="text" name="search" class="form-control" placeholder="Search posts..." aria-label="Search posts">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                            </form>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Categories</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="#" class="badge bg-primary category-badge">Technology</a>
                            <a href="#" class="badge bg-success category-badge">Travel</a>
                            <a href="#" class="badge bg-info category-badge">Lifestyle</a>
                            <a href="#" class="badge bg-warning text-dark category-badge">Food</a>
                            <a href="#" class="badge bg-danger category-badge">Health</a>
                            <a href="#" class="badge bg-secondary category-badge">Finance</a>
                        </div>
                    </div>
                </div>

                <!-- Recent Posts Widget -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Recent Posts</h5>
                        
                        {% for recent in recents %}
                        <div class="d-flex mb-3">
                            {% if recent.sampul_path == null %}
                                <img src="{{ asset('img/image.jpg') }}" class="rounded me-3" width="60" height="60" style="object-fit: cover;">
                            {% else %}
                                <img src="{{ asset(image_directory ~ 'file/' ~ recent.sampul_path ) }}" alt="{{ recent.sampul_name }}" class="rounded me-3" width="60" height="60" style="object-fit: cover;">
                            {% endif %}

                            <div>
                                <h6 class="mb-1"><a href="{{ path('blog', {slug: recent.url }) }}">{{ recent.title }}</a></h6>
                                <small class="text-muted">{{ recent.date|date('d F Y') }}</small>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Newsletter Widget -->
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Newsletter</h5>
                        <p class="card-text">Subscribe to get notified about new posts.</p>
                        <form>
                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Your email">
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- sidebar -->

        </div>
    </div>
</section>
{% endblock %}